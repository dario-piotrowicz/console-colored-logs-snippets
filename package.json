{
  "name": "console-colored-logs",
  "displayName": "Console Colored Logs Snippets",
  "description": "Minimal set of snippets for adding colors to console.logs",
  "version": "0.0.12",
  "publisher": "dariopiotrowicz",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Snippets",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "markdown": "github",
  "keywords": [
    "console.log",
    "javascript",
    "typescript",
    "nodejs"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.code-snippets",
        "extensions": [".js", ".cjs", ".mjs"]
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/snippets.code-snippets",
        "extensions": [".jsx"]
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets.code-snippets",
        "extensions": [".ts"]
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/snippets.code-snippets",
        "extensions": [".tsx"]
      }
    ],
    "commands": [
      {
        "command": "console-colored-logs.enableHighlights",
        "title": "Enable console-colored-logs highlights",
        "enablement": "!config.console-colored-logs.showHighlights"
      },
      {
        "command": "console-colored-logs.disableHighlights",
        "title": "Disable console-colored-logs highlights",
        "enablement": "config.console-colored-logs.showHighlights"
      }
    ],
    "configuration": {
      "title": "Console Colored Logs",
      "properties": {
        "console-colored-logs.showHighlights": {
          "type": "boolean",
          "default": false,
          "description": "Show highlights for the inserted color logs matching the used colors"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dario-piotrowicz/console-colored-logs-snippets.git"
  },
  "icon": "logo.png",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc --watch -p ./",
    "generate-snippets": "ts-node generate-snippets-file.ts",
    "build": "npm run compile ; npm run generate-snippets",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/node": "^18.7.23",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
